---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import { MapPin, Calendar, Layers, ArrowRight } from 'lucide-react';

export async function getStaticPaths({ paginate }) {
    const allPhotos = await getCollection('photos');
    // 按日期倒序排列
    const sortedPhotos = allPhotos.sort((a, b) =>
        new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
    );

    // 每页显示 9 个相册
    return paginate(sortedPhotos, { pageSize: 9 });
}

const { page } = Astro.props;

// 辅助函数：处理多语言字段 (title/description 可能为对象 {ja, en})
const getLocaleContent = (data) => {
    if (typeof data === 'string') return data;
    if (data && typeof data === 'object') {
        return data.ja || data.en || Object.values(data)[0] || '';
    }
    return data || '';
};
---

<BaseLayout title="Photos" description="Photography Journey">
    <div class="min-h-screen bg-ctp-base text-ctp-text py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">

            {/* 页面头部 */}
            <header class="mb-12 text-center md:text-left border-b border-ctp-surface0 pb-8">
                <h1 class="text-4xl md:text-5xl font-bold text-ctp-mauve mb-4 flex items-center justify-center md:justify-start gap-4">
                    <Layers className="w-10 h-10 md:w-12 md:h-12" />
                    <span>Gallery</span>
                </h1>
                <p class="text-ctp-subtext0 text-lg max-w-2xl">
                    光影记录。收录了 {page.total} 个瞬间集合。
                </p>
            </header>

            {/* 相册网格 */}
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {page.data.map((album) => {
                    // 数据回退逻辑：优先取 cover，没有则取 images 第一张，再没有则为空
          // 注意：旧数据可能没有 images 数组，只有 cover
          const images = album.data.images || [];
                    const coverImage = album.data.cover || (images.length > 0 ? images[0].url : '/assets/blog/default.webp');
                    const imageCount = images.length > 0 ? images.length : (album.data.cover ? 1 : 0);

                    const dateObj = new Date(album.data.date);
                    const formattedDate = dateObj.toLocaleDateString('zh-CN', {
                        year: 'numeric',
                        month: 'long',
                        day: 'numeric'
                    });

                    // 解析标题和描述，防止对象渲染导致错误
          const title = getLocaleContent(album.data.title);
                    const description = getLocaleContent(album.data.description);
                    const location = getLocaleContent(album.data.location);

                    return (
                            <a
                                    href={`/photos/${album.slug}`}
                                    class="group block relative bg-ctp-surface0 rounded-2xl overflow-hidden shadow-lg border border-ctp-surface1/50 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl hover:border-ctp-mauve/50"
                            >
                                {/* 封面图区域 */}
                                <div class="aspect-[4/3] overflow-hidden relative">
                                    <div class="absolute inset-0 bg-ctp-surface1 animate-pulse" /> {/* Loading 占位 */}
                                    <img
                                            src={coverImage}
                                            alt={title}
                                            class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                            loading="lazy"
                                    />

                                    {/* 遮罩层 - 悬停显示 */}
                                    <div class="absolute inset-0 bg-gradient-to-t from-ctp-base/90 via-ctp-base/20 to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300" />

                                    {/* 右上角数量标记 */}
                                    <div class="absolute top-4 right-4 bg-black/50 backdrop-blur-md text-white text-xs font-mono px-3 py-1 rounded-full border border-white/10 flex items-center gap-1.5">
                                        <Layers size={12} />
                                        <span>{imageCount} ITEMS</span>
                                    </div>
                                </div>

                                {/* 内容区域 */}
                                <div class="p-6 relative">
                                    <div class="flex items-center justify-between mb-3 text-xs font-medium text-ctp-subtext0">
                                        <div class="flex items-center gap-1.5">
                                            <Calendar size={14} class="text-ctp-mauve" />
                                            <time datetime={dateObj.toISOString()}>{formattedDate}</time>
                                        </div>
                                        {location && (
                                                <div class="flex items-center gap-1.5 text-ctp-teal">
                                                    <MapPin size={14} />
                                                    <span>{location}</span>
                                                </div>
                                        )}
                                    </div>

                                    <h2 class="text-xl font-bold text-ctp-text mb-2 line-clamp-1 group-hover:text-ctp-mauve transition-colors">
                                        {title}
                                    </h2>

                                    <p class="text-sm text-ctp-overlay2 line-clamp-2 mb-4 h-10">
                                        {description || '暂无描述...'}
                                    </p>

                                    <div class="flex items-center text-sm font-medium text-ctp-blue group-hover:underline decoration-2 underline-offset-4">
                                        浏览相册 <ArrowRight size={16} class="ml-1 transition-transform group-hover:translate-x-1" />
                                    </div>
                                </div>
                            </a>
                    );
                })}
            </div>

            {/* 分页控制 */}
            <div class="mt-16 flex justify-center items-center gap-6">
                {page.url.prev ? (
                        <a
                                href={page.url.prev}
                                class="px-6 py-2 rounded-full bg-ctp-surface0 text-ctp-text hover:bg-ctp-mauve hover:text-ctp-base transition-colors border border-ctp-surface1"
                        >
                            上一页
                        </a>
                ) : (
                        <span class="px-6 py-2 rounded-full bg-ctp-surface0/50 text-ctp-overlay0 cursor-not-allowed border border-ctp-surface1/50">
            上一页
          </span>
                )}

                <span class="text-ctp-subtext0 font-mono">
          {page.currentPage} / {page.lastPage}
        </span>

                {page.url.next ? (
                        <a
                                href={page.url.next}
                                class="px-6 py-2 rounded-full bg-ctp-surface0 text-ctp-text hover:bg-ctp-mauve hover:text-ctp-base transition-colors border border-ctp-surface1"
                        >
                            下一页
                        </a>
                ) : (
                        <span class="px-6 py-2 rounded-full bg-ctp-surface0/50 text-ctp-overlay0 cursor-not-allowed border border-ctp-surface1/50">
            下一页
          </span>
                )}
            </div>

        </div>
    </div>
</BaseLayout>