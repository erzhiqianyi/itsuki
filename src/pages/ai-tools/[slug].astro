---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import ToolRegistry from '../../components/tools/ToolRegistry.jsx';
import { SITE_CONFIG } from '../../data/site-config';
import { ArrowLeft, ExternalLink, BookOpen, Terminal, Info } from 'lucide-react';

/**
 * AI 工具详情页 - 极简 Bento 还原版 (V2.0)
 * 1. 结构优化：预览置顶，名称进入导航栏，文档与简介合并。
 * 2. 间距对齐：pt-4 适配首页标准容器间距。
 * 3. 视觉语言：沿用 font-black italic 标题与 Catppuccin 配色。
 */

export async function getStaticPaths() {
    const tools = await getCollection('ai-tools');
    return tools.map(tool => ({
        params: {
            slug: tool.id.replace(/\.md$/, '')
        },
        props: { tool },
    }));
}

const { tool } = Astro.props;
const { Content } = await render(tool);

const currentPath = Astro.url.pathname;
const isEnglish = currentPath.startsWith('/en');
const lang = isEnglish ? 'en' : 'ja';
const { brand, ui } = SITE_CONFIG;

const getLink = (path: string) => isEnglish ? `/en${path}` : path;
---

<BaseLayout title={`${tool.data.title} - ${brand.logo}`} lang={lang}>
    {/* 统一 pt-4 修复导航栏高度对齐问题 */}
    <main class="max-w-6xl mx-auto px-6 pt-4 pb-20 text-left">

        <header class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-8 px-2">
            <div class="flex items-center gap-5">
                <a
                        href={getLink("/ai-tools")}
                        class="p-3 bg-[#313244]/30 border border-white/5 rounded-2xl text-white/40 hover:text-[#89b4fa] hover:bg-[#89b4fa]/10 transition-all group"
                >
                    <ArrowLeft size={20} class="group-hover:-translate-x-1 transition-transform" />
                </a>
                <div class="flex flex-col md:flex-row md:items-center gap-2 md:gap-5">
                    <h1 class="text-3xl md:text-4xl font-black text-white italic tracking-tighter uppercase leading-none">
                        {tool.data.title}
                    </h1>
                    <div class="flex items-center gap-2">
                        <span class="px-2.5 py-0.5 bg-[#89b4fa]/10 rounded-full text-[9px] font-mono border border-[#89b4fa]/20 uppercase tracking-widest font-black text-[#89b4fa]">
                            # {tool.data.category[0]}
                        </span>
                        <span class="text-[9px] font-mono text-white/20 font-bold uppercase tracking-tighter">Updated: {tool.data.date}</span>
                    </div>
                </div>
            </div>

            <a
                    href={tool.data.url}
                    target="_blank"
                    class="flex items-center gap-2 px-6 py-3 rounded-2xl bg-[#fab387] text-[#1e1e2e] font-black italic text-xs uppercase tracking-tighter hover:scale-[1.02] active:scale-95 transition-all shadow-xl shadow-[#fab387]/10"
            >
                {ui.labels.openWeb[lang]}
                <ExternalLink size={14} />
            </a>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-12 gap-6">

            <section class="md:col-span-12 bento-card bg-[#1e1e2e]/50 rounded-[2.5rem] border border-white/5 p-1 flex flex-col group relative overflow-hidden min-h-[550px]">
                <div class="bg-slate-900/50 p-4 flex justify-between items-center rounded-t-[2.4rem] border-b border-white/5">
                    <div class="flex items-center gap-2 ml-4">
                        <div class="w-1.5 h-1.5 rounded-full bg-[#89b4fa] animate-pulse"></div>
                        <span class="text-[9px] font-black text-[#89b4fa] uppercase tracking-[0.2em] opacity-70">Interactive Preview System</span>
                    </div>
                    <Terminal size={14} class="text-white/20 mr-4" />
                </div>

                <div class="flex-grow p-6 md:p-12 bg-[#313244]/10 rounded-b-[2.4rem] flex flex-col">
                    <ToolRegistry componentId={tool.data.componentId} client:load />
                </div>
            </section>

            <section class="md:col-span-12 bento-card bg-[#313244]/15 rounded-[3rem] border border-white/5 p-10 md:p-16 relative overflow-hidden">
                <div class="flex flex-col gap-12">

                    <div class="space-y-6">
                        <div class="flex items-center gap-3 text-[#fab387]">
                            <Info size={20} />
                            <h2 class="text-xl font-black italic tracking-tighter uppercase leading-none">Tool Summary</h2>
                        </div>
                        <p class="text-white/90 text-xl leading-relaxed italic font-medium max-w-4xl">
                            {tool.data.description}
                        </p>
                    </div>

                    <div class="h-px w-full bg-white/5"></div>

                    <div class="space-y-8">
                        <div class="flex items-center gap-3 text-[#89b4fa]">
                            <BookOpen size={20} />
                            <h2 class="text-xl font-black italic tracking-tighter uppercase leading-none">Documentation & Details</h2>
                        </div>

                        <article class="prose prose-invert prose-peach max-w-none
                            prose-headings:italic prose-headings:font-black prose-headings:tracking-tighter prose-headings:uppercase
                            prose-p:text-white/70 prose-p:leading-relaxed prose-p:italic
                            prose-strong:text-[#fab387] prose-code:text-[#89b4fa]
                            prose-li:text-white/60
                            prose-img:rounded-[2rem] prose-img:border prose-img:border-white/10 shadow-2xl">
                            <Content />
                        </article>
                    </div>
                </div>

                <div class="absolute -bottom-20 -right-20 text-[12rem] font-black italic text-white/[0.02] select-none pointer-events-none uppercase tracking-tighter leading-none -rotate-12">
                    {tool.data.category[0]}
                </div>
            </section>

        </div>
    </main>
</BaseLayout>

<style>
    .bento-card {
        @apply transition-all duration-500;
        box-shadow: inset 0 1px 1px 0 rgba(255, 255, 255, 0.03);
    }

    /* 适配 Catppuccin 风格的代码块 */
    article pre {
        @apply bg-[#1e1e2e]/80 border border-white/5 rounded-[1.5rem] p-8 !important;
        box-shadow: inset 0 2px 10px rgba(0,0,0,0.2);
    }

    /* 针对 Markdown 里的链接 */
    article a {
        @apply text-[#89b4fa] decoration-[#89b4fa]/30 hover:decoration-[#89b4fa] transition-all underline-offset-4;
    }
</style>