---
// 1. 接收外部传入的参数（Props）
interface Props {
    title: string;
    description?: string;
}

const { title, description = "Itsuki's Personal Space" } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />

        <!-- SEO 标签 -->
        <title>{title}</title>
        <meta name="description" content={description} />
    </head>
    <body>
        <!-- 导航栏 -->
        <nav class="nav-container">
            <div class="nav-content">
                <a href="/" class="logo">
                    <span class="logo-dot"></span> Itsuki
                </a>
                <div class="nav-links">
                    <a href="/">Home</a>
                    <a href="/blog">Blog</a>
                    <a href="/photos">Photos</a>
                    <a href="/about">About</a>
                </div>
            </div>
        </nav>

        <!-- 页面主体内容：通过 slot 插入 -->
        <main>
            <slot />
        </main>

        <!-- 页脚 -->
        <footer class="footer">
            <div class="footer-content">
                <p>
                    &copy; {new Date().getFullYear()} Itsuki. Built with Astro & Cloudflare.
                </p>
                <div class="social-links">
                    <a href="https://github.com" target="_blank">GitHub</a>
                    <a href="/rss.xml">RSS</a>
                </div>
            </div>
        </footer>

        <style is:global>
            /* 全局基础样式 */
            :root {
                --text-main: #2d3748;
                --text-muted: #718096;
                --accent: #3182ce;
                --bg: #ffffff;
                --nav-height: 70px;
            }

            * {
                box-sizing: border-box;
            }

            body {
                margin: 0;
                font-family:
                    "Inter",
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    sans-serif;
                color: var(--text-main);
                background-color: var(--bg);
                line-height: 1.6;
                display: flex;
                flex-direction: column;
                min-height: 100vh;
            }

            main {
                flex: 1; /* 确保页脚始终在底部 */
                width: 100%;
                max-width: 800px;
                margin: 0 auto;
                padding: 2rem 1rem;
            }

            /* 导航栏样式 */
            .nav-container {
                height: var(--nav-height);
                border-bottom: 1px solid #f0f0f0;
                position: sticky;
                top: 0;
                background: rgba(255, 255, 255, 0.8);
                backdrop-filter: blur(10px);
                z-index: 100;
            }

            .nav-content {
                max-width: 800px;
                height: 100%;
                margin: 0 auto;
                display: flex;
                justify-content: space-between;
                align-items: center;
                padding: 0 1rem;
            }

            .logo {
                font-size: 1.25rem;
                font-weight: 700;
                text-decoration: none;
                color: var(--text-main);
                display: flex;
                align-items: center;
                gap: 8px;
            }

            .logo-dot {
                width: 8px;
                height: 8px;
                background: var(--accent);
                border-radius: 50%;
            }

            .nav-links {
                display: flex;
                gap: 1.5rem;
            }

            .nav-links a {
                text-decoration: none;
                color: var(--text-muted);
                font-size: 0.95rem;
                font-weight: 500;
                transition: color 0.2s;
            }

            .nav-links a:hover {
                color: var(--accent);
            }

            /* 页脚样式 */
            .footer {
                padding: 4rem 0 2rem;
                border-top: 1px solid #f0f0f0;
                margin-top: 4rem;
                color: var(--text-muted);
                font-size: 0.9rem;
            }

            .footer-content {
                max-width: 800px;
                margin: 0 auto;
                padding: 0 1rem;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .social-links {
                display: flex;
                gap: 1rem;
            }

            .social-links a {
                color: var(--text-muted);
                text-decoration: none;
            }

            .social-links a:hover {
                text-decoration: underline;
            }

            /* 移动端适配 */
            @media (max-width: 640px) {
                .nav-links {
                    gap: 0.75rem;
                }
                .footer-content {
                    flex-direction: column;
                    gap: 1rem;
                    text-align: center;
                }
            }
        </style>
    </body>
</html>
